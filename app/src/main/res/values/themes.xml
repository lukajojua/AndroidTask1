<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LukaJojua" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom Button Theme -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_bg</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/proxima_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Custom Edit Text Theme -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/custom_input_bg</item>
        <item name="android:textColorHint">@color/textsPrimary</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">24dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">14dp</item>
        <item name="android:fontFamily">@font/proxima_semi_bold</item>
    </style>

</resources>